# Local-only env for studyflow-server
# Copy to .env and adjust as needed; do NOT commit .env

# JWT secret for local auth (random string)
JWT_SECRET=change-me-dev-secret

# SQLite database URL
DATABASE_URL="file:./prisma/dev.db"

# Server port
PORT=4000

# Log level: trace|debug|info|warn|error|fatal
LOG_LEVEL=info

# LLM provider keys (leave empty if not used in dev)
OPENAI_API_KEY=
ANTHROPIC_API_KEY=

# Dev auth toggle: when true, server should not require JWT strictly (used in dev only)
DEV_AUTH_MODE=false

# Optional dev JWT secret if you implement a /api/auth/dev helper
DEV_JWT_SECRET=change-me-dev-jwt

# Qdrant vector DB (optional for RAG). Leave disabled to use fallback LIKE search.
# QDRANT_URL=http://127.0.0.1:6333
# QDRANT_COLLECTION=studyflow_chunks
# Set to 'true' to disable Qdrant calls (tests/dev without Docker)
QDRANT_DISABLED=true
