{
  "version": 2,
  "functions": {
    "server/api/*.ts": { "runtime": "nodejs20.x" }
  },
  "routes": [
    { "src": "/api/health", "dest": "server/api/health.ts" },
    { "src": "/api/(.*)",   "dest": "server/api/index.ts" },
    { "src": "/docs/(.*)",  "dest": "server/api/index.ts" },
    { "src": "/health",     "dest": "server/api/index.ts" }
  ]
}
